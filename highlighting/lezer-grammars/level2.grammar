@top Program { eol* (Command eol+)* Command? }
Command {
    Assign | Ask | Print | Turtle | Sleep
}

Assign { Text is+ Text+ }
Ask { Text is+ ask+ Text+ }
Print { print+ Text+ }
Sleep { sleep+ Text }

Turtle[@isGroup=turtle] {
    Forward { forward+ Text } |
    Turn { turn+ Text } |
    Color { color+ Text }
}

@external extend { Text } specializeKeyword from "./tokens" {
    ask[@name="ask"],
    print[@name="print"],
    forward[@name="forward"],
    turn[@name="turn"],
    color[@name="color"],
    sleep[@name="sleep"],
    is[@name="is"]
}

@tokens {
    Comment { "#" ![\n]* }
    eol { "\n" }
    space { " " }
    Text { ![\n #]+ }
}
// we do not skip level in this level and produce somewhat weird trees with errors
// but it works tm
@skip { Comment }